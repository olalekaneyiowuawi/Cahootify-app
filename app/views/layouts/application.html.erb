<!DOCTYPE html>
<html>
  <head>
    <title>Cahootifyapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link active" href="#">Cahootifyapp test App</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
    </ul>
    <main class="container">
      <% flash.each do |key, value| %>
        <div class="flash alert alert-dismissable <%= "alert-#{key}" %>" role="alert">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
